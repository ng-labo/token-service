service:
  name: Token Provider
  server:
    port: 443
    certfile: /your/cert.pem
    keyfile: /your/priv.pem
    httpclient: tornado.curl_httpclient.CurlAsyncHTTPClient
  oauth2:
    github:
      client_id: your github oauth2 client-id
      client_secret: your github oauth2 client-secret
      scope :
      oauth_url: your oauth2 ap
    google:
      client_id: your google oauth2 client-id
      client_secret: your google oauth2 client-secret
      scope :
      oauth_url: your oauth2 ap
  oauth:
    twitter:
      client_id: your twitter oauth client-id
      client_secret: your twitter oauth client-secret
      oauth_url: your oauth ap
    hatena:
      client_id: your hatena oauth consumer key
      client_secret: your twitter oauth consumer secret
      oauth_url: your oauth ap
  app  :
    webcontextpath:
  db:
    file: data/token.db
